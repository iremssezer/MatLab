clc;clear all;
r=imread('coins.png');
subplot(2,2,1);
imshow(r);
title('orjinal');
n=255-r;
subplot(2,2,2);imshow(n);
title('negatif');
sb=im2bw(r);
subplot(2,2,3);
imshow(sb);
title('siyah beyaz');
subplot(2,2,4);
imhist(r);
title('histogram');


figure;
subplot(2,2,1);imshow(r);
subplot(2,2,2);imhist(r);title('imhist');
r1=imadjust(r);/*gri görüntüde kontrastlık ayarı
bplot(2,2,3);imshow(r1);
title('imadjust');
bplot(2,2,4)
